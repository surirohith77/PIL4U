<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Floor Plans"
        android:fontFamily="@font/alata_regular"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:id="@+id/tvFeatures"
        android:textColor="@color/colorBlack"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFeatures"
        android:id="@+id/relativeFloorPlans">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rvFLoorPlans"
            android:layout_margin="10dp"
            android:layoutAnimation="@anim/layout_animation_down_to_up"
            />


</RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/floor_plan2"
        android:layout_below="@+id/relativeFloorPlans"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/imageview"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Evans Tower very high demand corner junior one bedroom plus a large balcony boasting full open NYC views. You need to see the views to believe them. Mint condition with new hardwood floors. Lots of closets plus washer and dryer."
            android:textColor="#000"
            android:fontFamily="@font/alata_regular"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tvBuildingType"
            android:layout_below="@+id/imageview"

            />

    </RelativeLayout>
    </ScrollView>
    </RelativeLayout>