    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeDetails"
            android:layout_below="@+id/relativeQuotes"
           >

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/check_mark_blk"

        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:id="@+id/tvCheck1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Start's"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
      android:layout_toEndOf="@+id/tvCheck1"
        android:layout_below="@+id/tvheading"
        android:layout_marginTop="13dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tvPlansStart"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" @ Rs. 16 per day "
            android:textColor="#FFC107"
            android:textStyle="bold"
            android:fontFamily="@font/alata_regular"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/tvPlansStart"
            android:layout_below="@+id/tvheading"
            android:layout_marginTop="13dp"
            />


    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/check_mark_blk"
        android:layout_below="@+id/tvCheck1"
        android:layout_marginStart="15dp"
        android:id="@+id/tvCheck2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cashless"
        android:textColor="#FFC107"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/tvCheck2"
        android:layout_below="@+id/tvCheck1"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tvCashless"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Treatments "
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/alata_regular"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/tvCashless"
            android:layout_below="@+id/tvCheck1"
            android:layout_marginTop="3dp"
            />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/check_mark_blk"
        android:layout_below="@+id/tvCheck2"
        android:layout_marginStart="15dp"
        android:id="@+id/tvCheck3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day Care"
        android:textColor="#FFC107"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/tvCheck3"
        android:layout_below="@+id/tvCheck2"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tvDayCare"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Procedures "
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/alata_regular"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/tvDayCare"
            android:layout_below="@+id/tvCheck2"
            android:layout_marginTop="3dp"
            />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/check_mark_blk"
        android:layout_below="@+id/tvCheck3"
        android:layout_marginStart="15dp"
        android:id="@+id/tvCheck4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Claim Bonus "
        android:textColor="#FFC107"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/tvCheck4"
        android:layout_below="@+id/tvCheck3"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeQuotes"
        android:layout_below="@+id/relativeHealth">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GET INSTANT QUOTES: "
                        android:textColor="#000"
                        android:fontFamily="@font/alata_regular"
                        android:layout_marginStart="5dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:id="@+id/tvexp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_below="@+id/tvexp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cover For: "
                            android:textColor="#000"
                            android:fontFamily="@font/alata_regular"
                            android:textSize="15sp"
                            android:id="@+id/tvConverFor"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="5dp"
                            />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinnerCoverFor"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:layout_toEndOf="@+id/tvConverFor"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of birth (DOB): "
                            android:textColor="#000"
                            android:fontFamily="@font/alata_regular"
                            android:textSize="15sp"
                            android:id="@+id/tvDob"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@+id/tvConverFor"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDob"
                            android:layout_marginTop="10dp"
                            android:id="@+id/linearDrop">


                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spinnerDay"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spinnerMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginStart="2dp"
                                />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spinnerYear"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                />

                        </LinearLayout>

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/alata_regular"
                            android:text="Proceed"
                            android:textColor="#fff"
                            android:background="@drawable/btn_bg_site"
                            android:layout_below="@+id/linearDrop"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/btnGet"
                            android:textStyle="bold"
                            />



                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>

</androidx.core.widget.NestedScrollView>