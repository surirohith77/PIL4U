<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
   >

    <ImageView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_offers"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:id="@+id/ivOffers"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Loan Offers"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvBank"
        android:layout_toEndOf="@+id/ivOffers"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="View Less"
      android:layout_marginTop="10dp"
        android:id="@+id/tvViewLess"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:textStyle="bold"

        android:textColor="#0055FF"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvOffers"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvBank"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />


</RelativeLayout>