<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


         <!--   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="5445544"
                android:id="@+id/tvCenterhorizontal"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/term_life_insurance"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>



            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_alignParentBottom="true"
                android:id="@+id/horizontalScroll1"
                >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/cardInvestmentPlan"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        >


                        <ImageView
                            android:id="@+id/ivicon3"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:src="@drawable/investment"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="Investment Plan"
                            android:fontFamily="@font/alata_regular"
                            android:textAlignment="center"
                            android:textSize="9sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ivicon3"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/card2Wheeler"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">


                        <ImageView
                            android:id="@+id/ivicon4"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bike"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="2wheeler Insurance"
                            android:fontFamily="@font/alata_regular"
                            android:textSize="9sp"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ivicon4"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/cardFamily"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/ivicon5"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:src="@drawable/family"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="Family Insurance"
                            android:textAlignment="center"
                            android:fontFamily="@font/alata_regular"
                            android:textSize="9sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ivicon5"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>




            </LinearLayout>
            </HorizontalScrollView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- <ImageView
                 android:id="@+id/imageview"
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:scaleType="fitXY"
                 android:src="@drawable/insurance_fmly" />

             <TextView
                    android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginStart="15dp"
                 android:layout_marginTop="25dp"
                             android:textColor="#fff"
                 android:textStyle="bold"
                 android:textSize="20sp"
                             android:text="Stay home Stay safe"
                             android:id="@+id/tvCenterhorizontal"/>-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorEnabled="true"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1"
                    />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        android:id="@+id/horizontalScroll2"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#44CAC6"
            android:id="@+id/cardHealthInsurance"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/doctor2"
                android:layout_margin="2dp"
                android:id="@+id/ivHealth"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Health Insurance"
                android:fontFamily="@font/alata_regular"
                android:textSize="12sp"
                android:textColor="#fff"
              android:layout_toEndOf="@+id/ivHealth"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#5e6788"
            android:id="@+id/cardTermInsurance"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/term"
                    android:layout_margin="2dp"
                    android:id="@+id/ivTermLife"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Term Life Insurance"
                    android:fontFamily="@font/alata_regular"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:layout_toEndOf="@+id/ivTermLife"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/color_site"
            android:id="@+id/cardCarInsurance"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/car_red"
                    android:layout_margin="2dp"
                    android:id="@+id/ivCar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Car Insurance"
                    android:fontFamily="@font/alata_regular"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:layout_toEndOf="@+id/ivCar"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#443F85"
            android:id="@+id/cardTravelInsurance"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/transport"
                    android:layout_margin="2dp"
                    android:id="@+id/ivTravel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Travel Insurance"
                    android:fontFamily="@font/alata_regular"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:layout_toEndOf="@+id/ivTravel"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#1e7dc7"
            android:id="@+id/cardPensionPlans"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/penison"
                    android:layout_margin="2dp"
                    android:id="@+id/ivPension"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Pension Plans"
                    android:fontFamily="@font/alata_regular"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:layout_toEndOf="@+id/ivPension"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </HorizontalScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/user_list_container"
            >

        </FrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

