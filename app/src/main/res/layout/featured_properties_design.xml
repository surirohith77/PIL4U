    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorIcon"
        android:layout_toEndOf="@+id/cardRent"
        android:layout_marginStart="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9C0000"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured"
                android:layout_centerInParent="true"
                android:id="@+id/tvHintt"
                android:layout_marginTop="3dp"
                android:textColor="#fff"
                android:fontFamily="@font/alata_regular"
                android:layout_marginBottom="5dp"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Beds: 4"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/tvBeds"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Baths: 2"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/alata_regular"
        android:id="@+id/tvBaths"
        android:layout_toEndOf="@+id/tvBeds"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Sq ft: 5280 "
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/alata_regular"
        android:layout_marginBottom="15dp"
        android:id="@+id/tvSqrt"
        android:layout_toEndOf="@+id/tvBaths"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Renovated Apartment"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tvBuildingType"
        android:layout_above="@+id/tvBeds"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="\u20B913000/mo"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tvMoney"
        android:layout_above="@+id/tvBuildingType"
        />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
