<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Whole Life Insurance"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/alata_regular"
                android:id="@+id/tvTitle"
                android:textSize="16sp"
                android:maxLines="1"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:src="@drawable/term_insurance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/imageview"
                android:layout_below="@+id/tvTitle"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Risk Cover lIfe long + loan facility + money on maturity"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/alata_regular"
                android:layout_below="@+id/imageview"
                android:layout_marginTop="10dp"
                android:id="@+id/tvDesc"
                android:maxLines="2"
                android:textSize="12sp"
                android:textAlignment="center"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Enquiry Now"
                android:layout_below="@+id/tvDesc"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_yellow_insu"
                android:textColor="#fff"
                android:textSize="12sp"
                android:fontFamily="@font/alata_regular"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>