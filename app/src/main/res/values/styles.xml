-->
    <!--<style name="AppTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark" />-->
    <style name="toolbartextstyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/alata_regular</item>
    </style>

    <style name="App_SpinnerStyle" >
        <item name="android:fadeScrollbars">true</item>
    </style>


</resources>